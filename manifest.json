{
    "name": "Voice GPT",
    "version": "0.1.0",
    "description": "Allows you to interact with chatGPT using your voice",
    "host_permissions": [
        "https://chat.openai.com/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "webRequest",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "src/inject.js",
                "src/initiate.js",   
                "src/stt.js",
                "src/render.js"
            ],
            "css": [
                "css/app.css"
            ],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 3,
    "action": {
        "default_icon": "assets/icon.png",
        "default_title": "Voice GPT"
    },
    "web_accessible_resources": [{
        "matches": [
            "https://chat.openai.com/*"
        ],
        "resources": [
            "app.html",
            "assets/icon.png"
        ]
    }],
    "background": {
        "service_worker": "src/background.js"
    }
}